{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "pages/*.html", "use": "@vercel/static" },
    { "src": "public/css/*.css", "use": "@vercel/static" },
    { "src": "scripts/*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/pages/index.html" },
    { "src": "/market", "dest": "/pages/market.html" },
    { "src": "/profile", "dest": "/pages/profile.html" },
    { "src": "/admin", "dest": "/pages/admin.html" },
    { "src": "/ads", "dest": "/pages/ads.html" },
    { "src": "/api/(.*)", "dest": "server/server.js" }
  ]
}
